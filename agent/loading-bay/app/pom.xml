      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>com.google.cloud.tools</groupId>
        <artifactId>jib-maven-plugin</artifactId>
        <!-- jib.* properties currently only work on CLI. Maven properties don't work so have to redeclare the config -->
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>${jib.goal}</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <from>
            <image>openjdk:8u151-jdk-slim</image>
          </from>
          <to>
            <image>${docker.to.image}</image>
          </to>
          <container>
            <!-- Have to provide a jvmFlag otherwise it inherits from the parent! -->
            <jvmFlags>
              <jvmFlag>-Xms1G</jvmFlag>
            </jvmFlags>
            <ports>
              <port>${docker.container.port}</port>
            </ports>
            <labels>
              <maintainer>data-highway@expedia.com</maintainer>
            </labels>
          </container>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
